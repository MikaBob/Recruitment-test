{% extends 'base.html.twig' %}

{% block title %}User{% endblock %}

{% block content %}
    <h2>User list</h2>
    <div class="my-1 float-end">
        <a href="/user/create" class="btn btn-outline-primary btn">Add new user</a>
    </div>
    <div id="alert" class="alert alert-danger alert-dismissible" style="display: none;" role="alert"></div>
    <table class="table table-striped table-hover table-bordered">
        <tr>
            <th scope="col">First name</th>
            <th scope="col">Last name</th>
            <th scope="col">Email</th>
            <th scope="col">Creation date</th>
            <th scope="col">Last connection</th>
        </tr>
    {% for user in users %}
        <tr scope="row" onClick="openModal({{ user.id }});">
            <td>{{ user.firstName }}</td>
            <td>{{ user.lastName }}</td>
            <td>{{ user.email }}</td>
            <td>{{ user.creationDate|format_datetime('short', 'short') }}</td>
            <td>{{ user.lastLogin}}</td>
        </tr>
    {% endfor %}
    </table>

    <!-- Modal (https://getbootstrap.com/docs/4.0/components/modal/) -->
    <div class="modal fade" id="modalCenter" tabindex="-1" role="dialog" aria-labelledby="modalCenterTitle" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content">
                <form id="modalForm" onsubmit="return saveChanges(event)">
                    <input id="userId" name="userId" type="hidden" value=""/>
                    <div class="modal-header">
                        <h5 class="modal-title" id="modalTitle"></h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div id="modalAlert" class="alert alert-danger alert-dismissible" style="display: none;" role="alert"></div>
                    <div class="modal-body">
                        <table class="table table-striped table-hover table-bordered">
                            <tr>
                                <td><b>First name</b></td>
                                <td><input id="firstName" name="firstName" type="text" value=""/></td>
                            </tr>
                            <tr>
                                <td><b>Last name</b></td>
                                <td><input id="lastName" name="lastName" type="text" value=""/></td>
                            </tr>
                            <tr>
                                <td><b>Email</b></td>
                                <td><input id="email" name="email" type="email" value=""/></td>
                            </tr>
                        </table>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                        <button type="submit" class="btn btn-primary">Save changes</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <script type="text/javascript">
        function openModal(userId){
            $.ajax({
                url: "/userAPI/get/"+userId,
                async: true,
                type: 'GET',

                success: function(data) {
                    console.log(data);
                    if(data.status !== 200) {
                        $('#alert').text('Error: ' + data.error);
                        $('#alert').fadeIn();
                        setTimeout(()=>{
                            $('#alert').text('');
                            $('#alert').fadeOut();
                        }, 3000);
                    } else {
                        let user = data.user;
                        $('#modalTitle').text('Edit user ' + user.email);
                        $('#modalForm #userId').val(user.id);
                        $('#modalForm #firstName').val(user.firstName);
                        $('#modalForm #lastName').val(user.lastName);
                        $('#modalForm #email').val(user.email);
                        $('#modalCenter').modal('show');
                    }
                }
            });
        }

        function saveChanges(e) {
            e.preventDefault();

            let userId = $('#modalForm #userId').val();
            var data = {
                'firstName' : $('#modalForm #firstName').val(),
                'lastName' : $('#modalForm #lastName').val(),
                'email' : $('#modalForm #email').val()
            };

            $.ajax({
                url: "/userAPI/post/"+userId,
                async: true,
                data: data,
                type: 'POST',

                success: function(data) {
                    if(data.status !== 200) {
                        $('#modalAlert').text('Error: ' + data.error);
                        $('#modalAlert').fadeIn();
                        setTimeout(()=>{
                            $('#modalAlert').text('');
                            $('#modalAlert').fadeOut();
                        }, 3000);
                    } else {
                        $('#modalCenter').modal('hide');
                    }
                }
            });

            return false;
        }
    </script>
{% endblock %}

