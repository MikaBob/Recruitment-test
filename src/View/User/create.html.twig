{% extends 'base.html.twig' %}

{% block title %}User creation{% endblock %}

{% block content %}
    <h2>User creation</h2>
    <form action="/user/create" method="POST">
        <div class="mb-3">
            <label for="firstName" class="form-label">First name</label>
            <input type="text" class="form-control" id="firstName" name="firstName" maxlength="255" value="{{ user.firstName }}">
        </div>

        <div class="mb-3">
            <label for="lastName" class="form-label">Last name</label>
            <input type="text" class="form-control" id="lastName" name="lastName" maxlength="255" value="{{ user.lastname }}">
        </div>

        <div class="mb-3">
            <label for="email" class="form-label">Email address</label>
            <input type="email" class="form-control" id="email" name="email" maxlength="255" value="{{ user.email }}">
        </div>

        <button type="submit" class="btn btn-primary">Submit</button>
        {% if errors is not empty %}
            {% for error in errors %}
                <div class="my-1 alert alert-danger">{{ error }}</div>
            {% endfor %}
        {% endif %}
    </form>
{% endblock %}

